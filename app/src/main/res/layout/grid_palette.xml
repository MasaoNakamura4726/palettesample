<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <include
        layout="@layout/text_palette"
        android:id="@+id/normal_vibrant"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="0"
        android:layout_row="0"/>

    <include
        layout="@layout/text_palette"
        android:id="@+id/normal_muted"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="0"
        android:layout_row="1"/>

    <include
        layout="@layout/text_palette"
        android:id="@+id/light_vibrant"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="1"
        android:layout_row="0"/>

    <include
        layout="@layout/text_palette"
        android:id="@+id/light_muted"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="1"
        android:layout_row="1"/>

    <include
        layout="@layout/text_palette"
        android:id="@+id/dark_vibrant"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="2"
        android:layout_row="0"/>

    <include
        layout="@layout/text_palette"
        android:id="@+id/dark_muted"
        android:layout_width="@dimen/palette_width"
        android:layout_height="@dimen/palette_height"
        android:layout_column="2"
        android:layout_row="1"/>
</GridLayout>